package es.deusto.client.GUI;

import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Toolkit;

import javax.swing.ImageIcon;
import javax.swing.JPanel;
import javax.swing.border.BevelBorder;

public class PnlCarga extends JPanel implements Runnable{

	
	
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	private ImageIcon imgic;
	// especificamos el nombre de la ruta
	private String nombreruta="";
	// imagenes cargadas en el proyecto para su carga
	private String[] cargaimagenes = {
			"mispotify.png","mispotifycargauno.png","mispotifycargados.png","mispotifycargatres.png"};
	
	private String miimagen="acdc.jpg";
	private java.net.URL imgURL;
	private String imagen="";
	private Thread carga=null;
	private int index= 0;
	
	/**
	 * Create the panel.
	 */
	
	// imagen inicial
	public PnlCarga() {
		setBorder(new BevelBorder(BevelBorder.LOWERED, null, null, null, null));
		
		setLayout(null);

	}
	
	@Override
	public void paint(Graphics g) {
		
		
		imagen = cargaimagenes[2];
		imgURL = getClass().getResource(imagen);
		
		
	    if (true) {
	    	Graphics2D gr=(Graphics2D)g;
			Dimension t = getSize();
	    	imgic= new ImageIcon(imgURL);
			gr.drawImage(Toolkit.getDefaultToolkit().getImage("imagenes/acdc.jpg"), 0, 0, t.width, t.height, null);
	        
	    } else {
	        System.err.println("no se encontro el archivo especificado de la imagen" + nombreruta);
	        
	    }
	    
		setOpaque(false);
		
		super.paint(g);
		
	}
	
	@Override
	public void update(Graphics g) {
		// TODO Auto-generated method stub
		super.update(g);
		paint(g);
	}


	
	@Override
	public void run() {
		// TODO Auto-generated method stub
		int i=0;
		
		while(carga!=null)
		{
			try{
				
				
				Thread.sleep(1000);
				// cada segundo incrementamos la variable
				// recorremos el array pintado la imagen de la 
				// siguiente posicion
				i++;
			
				
			}catch(Exception e)
			{
				e.printStackTrace();
			}
			repaint();
		}
		
		// duda
		carga=null;
		
	}
	
	public void start()
	{
		
		if(carga==null)
		{
			carga= new Thread(this);
			carga.start();
			
		}
		
	}
	
	
	public void stop()
	{
		
		carga=null;
		carga.stop();
		
	
	}

}
